// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  user      String    @unique
  password  String
  createdAt DateTime?

  @@map("users")
}

model Room {
  id        String    @id @default(uuid())
  number    Int       @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now())
  createdBy String?
  Session   Session[]

  @@map("rooms")
}

model Movie {
  id                String    @id @default(uuid())
  name              String    @db.VarChar(36)
  synopsis          String
  synopsis_expanded String
  banner            String
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @default(now())
  createdBy         String?
  Session           Session[]

  @@unique([id, name])
  @@map("movies")
}

model Session {
  id         String   @id @default(uuid())
  room       Room     @relation(fields: [roomNumber], references: [number])
  roomNumber Int
  sits       String[]
  time       DateTime
  movie      Movie    @relation(fields: [movieId, movieName], references: [id, name])
  movieId    String
  movieName  String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now())
  createdBy  String?

  @@map("sessions")
}

model GlobalParameter {
  id    String @id @default(uuid())
  name  String @unique
  value String

  @@map("globalparameters")
}

model Sale {
  id           String @id @default(uuid())
  movieId      String
  sessionId    String
  value        Float
  ticketAmount Int

  @@map("sales")
}

model Reservation {
  id      String @id @default(uuid())
  roomId  String
  movieId String
  seats   Json

  @@map("reservations")
}
