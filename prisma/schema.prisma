// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  user      String
  password  String
  createdAt DateTime?

  @@map("users")
}

model Room {
  id        String    @id @default(uuid())
  number    Int       @unique
  sits      Json
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now())
  Session   Session[]

  @@map("rooms")
}

model Movie {
  id                String    @id @default(uuid())
  name              String
  synopsis          String
  synopsis_expanded String
  banner            String
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @default(now())
  Session           Session[]

  @@map("movies")
}

model Session {
  id         String   @id @default(uuid())
  room       Room     @relation(fields: [roomNumber], references: [number])
  roomNumber Int      @unique
  time       DateTime
  movie      Movie    @relation(fields: [movieId], references: [id])
  movieId    String   @unique
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now())

  @@map("sessions")
}

model Sale {
  id           String @id @default(uuid())
  movieId      String
  sessionId    String
  value        Float
  ticketAmount Int

  @@map("sales")
}

model Reservation {
  id      String @id @default(uuid())
  roomId  String
  movieId String
  seats   Json

  @@map("reservations")
}
